{
  "name": "Crictension",
  "version": "1.0.0",
  "description": "A beautiful extension to get live cricket scores, match updates, and notifications for your favorite matches",
  "manifest_version": 3,
  "author": "Poreddy Dinesh Reddy",
  "action": {
    "default_popup": "index.html",
    "default_title": "Crictension - Live Cricket Scores",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "notifications",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  }
}